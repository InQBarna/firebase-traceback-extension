{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Emulators",
            "host": "127.0.0.1",
            "port": 9229,
            "restart": true,
            "timeout": 30000,
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Extension with Emulators",
            "runtimeExecutable": "${userHome}/.nvm/versions/node/v20.18.3/bin/firebase",
            "runtimeArgs": [
                "emulators:start",
                "--inspect-functions",
                "--project=iqbdemocms"
            ],
            "cwd": "${workspaceFolder}/functions/integration-tests",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "skipFiles": ["<node_internals>/**"]
        },
        {
          "type": "node",
          "name": "Debug Jest Tests",
          "request": "launch",
          "program": "${workspaceFolder}/functions/node_modules/.bin/jest",
          "args": [
            "--config", "${workspaceFolder}/functions/jest.config.js",
            "--rootDir", "${workspaceFolder}/functions",
            "${workspaceFolder}/functions/"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "disableOptimisticBPs": true
        }
      ]
        
}

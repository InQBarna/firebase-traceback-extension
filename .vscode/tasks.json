{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Emulators",
      "type": "shell",
      "command": "firebase",
      "args": [
        "emulators:start",
        "--inspect-functions",
        "--project=iqbdemocms"
      ],
      "options": {
        "cwd": "${workspaceFolder}/functions/integration-tests"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*starting emulators.*",
          "endsPattern": ".*All emulators ready.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Seed Dummy Links",
      "type": "shell",
      "command": "npm",
      "args": ["run", "init:links"],
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build Watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build:watch"],
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}( AM| PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
          "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}( AM| PM)? - (Compilation complete\\.|Found \\d+ errors?\\. Watching for file changes\\.)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Emulators and Seed",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Start Emulators",
        "Seed Dummy Links"
      ],
      "problemMatcher": []
    },
    {
      "label": "Start Dev Environment",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Build Watch",
        "Start Emulators and Seed"
      ],
      "problemMatcher": []
    }
  ]
}

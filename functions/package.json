{
  "name": "firebase-traceback",
  "scripts": {
    "lint": "eslint \"src/**/*\" \"test/**/*\" \"scripts/**/*\"",
    "lint:fix": "eslint \"src/**/*\" \"test/**/*\" \"scripts/**/*\" --fix",
    "build": "tsc && rm -rf lib/assets && cp -R src/assets lib/assets",
    "build:watch": "npm-run-all --parallel watch:tsc watch:assets",
    "watch:tsc": "tsc --watch",
    "watch:assets": "chokidar 'src/assets/**/*' -c 'rm -rf lib/assets && cp -R src/assets lib/assets' --initial",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "script": "ts-node --project tsconfig.scripts.json",
    "init:links": "npm run script scripts/create-dummy-links.ts",
    "init:links:prod": "npm run script scripts/create-dummy-links.ts -- --prod",
    "init:apikey": "npm run script scripts/create-api-key.ts",
    "init:apikey:prod": "npm run script scripts/create-api-key.ts -- --prod",
    "init:all": "npm run init:links && npm run init:apikey",
    "init:all:prod": "npm run init:links:prod && npm run init:apikey:prod"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.5.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.2.0",
    "google-auth-library": "^9.0.0",
    "joi": "^17.13.3",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "engines": {
    "node": "20"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "firebase-functions-test": "^3.4.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2"
  },
  "private": true
}
